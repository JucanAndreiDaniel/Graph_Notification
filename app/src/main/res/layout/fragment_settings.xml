<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/notificationSettingCardView"
        android:layout_width="410dp"
        android:layout_height="54dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:backgroundTintMode="add"
        android:clickable="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06999999">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notificationSettingConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/notificationSettingImage"
                android:layout_width="55dp"
                android:layout_height="54dp"
                android:layout_marginEnd="4dp"
                android:contentDescription="@string/bell_notification_icon"
                android:src="@drawable/ic_notifications_black_24dp"
                app:layout_constraintEnd_toStartOf="@+id/notificationSettingTitle"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/notificationSettingTitle"
                android:layout_width="344dp"
                android:layout_height="33dp"
                android:text="@string/notification_frequency"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.909"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.238" />

            <TextView
                android:id="@+id/notificationSettingDescription"
                android:layout_width="343dp"
                android:layout_height="25dp"
                android:text="@string/change_how_often_you_will_receive_notifications"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/notificationSettingTitle"
                app:layout_constraintTop_toBottomOf="@+id/notificationSettingTitle"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/background_round"
        app:layout_constraintBottom_toTopOf="@+id/actionsText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/actionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/other"
        android:textColor="#FFF7BA5B"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/rebuildDatabaseButton"
        app:layout_constraintStart_toStartOf="@+id/rebuildDatabaseButton" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Log_out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toEndOf="@+id/rebuildDatabaseButton"
        app:layout_constraintTop_toTopOf="@+id/rebuildDatabaseButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/rebuildDatabaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rebuild_database"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/divider"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238" />

</androidx.constraintlayout.widget.ConstraintLayout>