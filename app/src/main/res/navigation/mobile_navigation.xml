<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.scfnotification.notifyme.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_navigation_detail"
            app:destination="@id/navigation_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favourites"
        android:name="com.scfnotification.notifyme.ui.favourites.FavouritesFragment"
        android:label="@string/title_favourites">
        <action
            android:id="@+id/action_navigation_favourites_to_navigation_detail"
            app:destination="@id/navigation_detail" />
        <action
            android:id="@+id/action_navigation_favourites_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.scfnotification.notifyme.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications">
        <action
            android:id="@+id/action_navigation_notifications_to_createNotificationDialog"
            app:destination="@id/createNotificationDialog" />
        <action
            android:id="@+id/action_navigation_notifications_to_modifyNotificationDialog"
            app:destination="@id/modifyNotificationDialog" />
    </fragment>
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.scfnotification.notifyme.ui.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/navigation_detail"
        android:name="com.scfnotification.notifyme.ui.details.DetailFragment"
        android:label="Details"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="coinId"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/createNotificationDialog"
        android:name="com.scfnotification.notifyme.ui.notifications.CreateNotificationDialog"
        android:label="CreateNotificationDialog" >
        <argument
            android:name="nameList"
            app:argType="string[]" />
    </dialog>
    <dialog
        android:id="@+id/modifyNotificationDialog"
        android:name="com.scfnotification.notifyme.ui.notifications.ModifyNotificationDialog"
        android:label="ModifyNotificationDialog" >
        <argument
            android:name="coinId"
            app:argType="string" />
        <argument
            android:name="value_type"
            app:argType="string" />
        <argument
            android:name="value"
            app:argType="long" />
    </dialog>
</navigation>